<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/day2"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/hour_current_degree"
        app:layout_constraintTop_toTopOf="@+id/hour_current_degree"
        app:layout_constraintBottom_toBottomOf="@+id/hour_current_degree"/>

    <TextView
        android:id="@+id/hour_current_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="DegreeH"
        android:textColor="#333333"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hour_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text="Time"
        android:textColor="#333333"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/hour_current_degree"
        app:layout_constraintStart_toStartOf="@id/day2"
        app:layout_constraintTop_toBottomOf="@id/hour_current_degree"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>