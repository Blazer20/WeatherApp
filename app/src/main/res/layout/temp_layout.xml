            <ImageView
                android:id="@+id/collapseSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/ic_sunrise"
